<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkApp.App">
    <Application.Resources>
        
        <!--Fonts-->

        <!--Components-->

        <Style x:Key="DefaultButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#EEEEEE"/>
            <Setter Property="TextColor" Value="#7638B6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Arial"/>
        </Style>
        <Style x:Key="DefaultStackLayout" TargetType="StackLayout">
            <Setter Property="BackgroundColor" Value="#FFD86A"/>
            <Setter Property="Padding" Value="10,10,10,10"/>
        </Style>
        <Style x:Key="DefaultLabel" TargetType="Label">
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="BackgroundColor" Value="Wheat"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Application.Resources>
</Application>